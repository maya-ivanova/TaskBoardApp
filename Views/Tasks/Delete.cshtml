@using TaskBoardApp.Models.Tasks;
@model TaskViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<form asp-action="Delete">

    <div class="d-flex justify-content-center">
        <div class="card " style="width: 50rem;">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <p class="card-text"><span class="fw-bold">Description: </span>@Model.Description</p>
            </div>
            <div class="mb-3 d-flex justify-content-center">

                <h3 class="card-title text-center">ARE YOU SURE YOU WANT TO DELETE THIS TASK?   </h3>
                <p>
                    <br />
                    <br />
                    <input type="submit" value="YES" class="btn btn-danger" />

                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success mb-2">NOPE</a>

                </p>
            </div>
        </div>
    </div>
</form>
